<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".followingList"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWhoFollowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal"
            android:padding="10dp"
            android:text="@string/who_i_m_following"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/listViewFindFollowers"
            android:layout_width="match_parent"
            android:layout_height="473dp"
            android:layout_below="@+id/textViewWhoFollowing"
            android:scrollbars="vertical" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darkTeal"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/see_all_on_map"
            android:layout_below="@id/listViewFindFollowers"/>

    </RelativeLayout>

</FrameLayout>