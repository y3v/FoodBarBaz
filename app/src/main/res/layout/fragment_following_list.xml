<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".followingList"
    android:background="@color/lightGreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewWhoFollowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal"
            android:padding="10dp"
            android:text="@string/who_i_m_following"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/listViewFindFollowers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/textViewWhoFollowing"
            android:scrollbars="vertical"
            android:layout_above="@id/buttonFollowAll"
            android:dividerHeight="0dp"
            android:divider="@null"/>

        <Button
            android:id="@+id/buttonFollowAll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/darkTeal"
            android:text="@string/see_all_on_map"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progressBarFollowing"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</FrameLayout>